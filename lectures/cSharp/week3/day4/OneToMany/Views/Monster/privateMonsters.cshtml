@{
    ViewData["Title"] = "Your Monsters";
}
@model List<Monster>
<h1>@Context.Session.GetString("name"), here are the monsters you have added</h1>

<div class="row">
    @foreach(Monster m in Model) {
    <div class="column">
        <h2>@m.Name</h2>
        <img src="@m.Img" alt="@m.Name">
        <p>Private: @m.Hidden<br>User: @m.Owner.FirstName</p>
        <p>
            <a href="/monster/@m.MonsterId/view">View</a><br>
            @if(@m.UserId == @Context.Session.GetInt32("uid")) {
                <a href="/monster/@m.MonsterId/edit">Edit</a><br>
                <a href="/monster/@m.MonsterId/delete/">Delete</a>
            }
        </p>
    </div>
}
</div>